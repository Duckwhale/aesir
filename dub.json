{
	"name": "perfontain",
	"targetPath": "bin",
	"buildTypes": {
		"debug-no-info": {
			"buildOptions": [
				"debugMode"
			]
		}
	},
	"dependencies": {
		"stb": ">=2.0.1",
		"utile": ">=1.2.6",
		"pegged": ">=0.4.5-beta.2",
		"derelict-sdl2": ">=3.1.0-alpha.4"
	},
	"subConfigurations": {
		"derelict-sdl2": "derelict-sdl2-static"
	},
	"stringImportPaths": [
		"source/perfontain/shader/res"
	],
	"libs": [
		"sdl_x64",
		"lispsm_x64",
		"nuklear_x64",
		"sdl_ttf_x64",
		"sdl_mixer_x64"
	],
	"dflags": [
		"-preview=intpromote"
	],
	"dflags-ldc": [
		"-ffast-math"
	],
	"libs-linux": [
		"Xi",
		"X11",
		"Xext",
		"asound",
		"stdc++"
	],
	"lflags-linux": [
		"-s",
		"-Lutils/deps"
	],
	"lflags-windows": [
		"/manifest:embed",
		"/LIBPATH:utils/deps"
	],
}
